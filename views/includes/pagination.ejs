<div class="pagination">
    <% if (hasPreviousPage) { %>
        <a href="?page=<%= currentPage - 1 %>" class="page">&lt;</a>
    <% } %>

    <a href="?page=1" class="<%= (currentPage === 1) ? 'page is-active' : 'page' %>">1</a>

    <% if (+currentPage !== 1 && currentPage !== pages) { %>
        <span class="page is-active"><%= currentPage %></span>
    <% } else { %>
        ...
    <% } %>

    <a href="?page=<%= pages %>" class="<%= (currentPage === pages) ? 'page is-active' : 'page' %>"><%= pages %></a>

    <% if (hasNextPage) { %>
        <a href="?page=<%= currentPage + 1 %>" class="page">&gt;</a>
    <% } %>
</div>