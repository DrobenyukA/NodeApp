<!DOCTYPE html>
<html lang="en">

<head>
    <%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css"/>
    <link rel="stylesheet" href="/css/auth.css"/>
</head>

<body>
    
    <%- include('../includes/navigation.ejs') %>
    
    <main>
        <h1 class="text-center"><%= pageHeader %></h1>

        <% if (error) { %>
            <p class="alert"><%= error %></p>
        <% } %>

        <% if (success) { %>
            <p class="alert alert-success"><%= success %></p>
        <% } %>
        
        <form class="login-form" action="<%= actions.resetHandler %>" method="POST">
            
            <input type="hidden" name="_csrf" value="<%= csrfToken %>"/>
            
            <div class="form-control <% if (errors.email) { %> has-error <% } %>">
                <label for="email">Email</label>
                <input type="email" name="email" id="email" value="<%= userData.email %>"/>
                <% if (errors.email) { %>
                    <p class="alert"><%= errors.email %></p>
                <% } %>
            </div>

            <button type="submit" class="btn">
                Reset password
            </button>

        </form>
    </main>
    
    <%- include('../includes/scripts.ejs') %>

</body>

</html>
