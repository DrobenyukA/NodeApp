{
    "env": { 
        "es6": true 
    },
    "extends": ["eslint:recommended", "plugin:node/recommended", "plugin:prettier/recommended"],
    "rules": {
        "prettier/prettier": ["error", {
            "printWidth": 120,
            "tabWidth": 4,
            "semi": true,
            "singleQuote": true,
            "arrowParens": "always",
            "trailingComma": "all"
        }],
        "single": true
    }
}